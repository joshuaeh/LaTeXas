% Title Page
\pgfdeclareimage[width=16 cm]{bg_image}{assets/images/moerdik_angle_color.png}  % expanded to ensure no white margin

\setbeamertemplate{title page}{
    %\vspace{-0.5 cm}  % shift up to counter header and upper margin
    \begin{picture}(16 cm,9 cm)(0,0)

        \put(-1 cm,0){%
            \pgfuseimage{bg_image}
        }
        
        \put(0,0.3 cm){%
            \fboxsep=0pt
            \colorbox{charcoal}{
            \begin{minipage}[b][][c]{14 cm} % [position][height][inner-pos]{width}
            % b - align bottom of text with baseline of minipage
                \vspace{1 ex}
                \usebeamerfont{title}\usebeamercolor[fg]{title}{\raggedright \inserttitle\par}
                \usebeamerfont{subtitle}{\insertsubtitle\par}
                \vspace{0.3 cm}
                \usebeamerfont{author}{\insertauthor\par}
                \usebeamerfont{institute}{\textit{\insertinstitute\par}}
                \usebeamerfont{date}{\insertdate\par}
                \vspace{1 ex}
            \end{minipage}
        }}

        \end{picture}

    }

% Frame title
\defbeamertemplate*{frametitle}{LaTeXas}[1][]{
    \vskip-.1cm
    % burnt orange box
    \begin{beamercolorbox}[wd=\paperwidth,ht=1.1 cm]{frametitle} 
    \begin{tikzpicture}
    \useasboundingbox(0,0) rectangle(\the\paperwidth,1.1 cm);
    % color bar
    {\usebeamercolor[fg]{frametitle-bg}}
    \fill[color=frametitle-bg.fg] (0,0) rectangle(\paperwidth,1.1 cm);
    % logo
    \hspace{-.5 cm}
    \includegraphics[width=.23\paperwidth]{assets/logo/UTexas-White.eps}
    % title
    \node[anchor= west] at (0.1 cm,0.5 cm){\usebeamerfont{frametitle}\insertframetitle};
    \end{tikzpicture}
  \end{beamercolorbox}
}

